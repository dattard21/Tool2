<script>
    $(document).ready(function() {
        $('#success').hide();
        $('#insert_movies').click(function() {
            $.ajax({
                url: '<?php echo route("insertmovie"); ?>',
                type: 'post',
                data: $('#insert_form').serialize(),
                cache: false,
                dataType: 'json',
                success: function(result) {
                    if (!result.success) {
                        $.each(result.errors, function(index, error) {
                            if (result.errors.title != null) {
                                $('#title_error').html(result.errors.title);
                                $('#title_div').addClass('has-error').focus();
                            }
                            if (result.errors.director != null) {
                                $('#director_error').html(result.errors.director);
                                $('#director_div').addClass('has-error').focus();
                            }
                        });
                    } else {
                        $('#title_error').html('');
                        $('#title_div').removeClass('has-error');
                        $('#director_error').html('');
                        $('#director_div').removeClass('has-error');
                        $('#success').show(1500);
                        $('#insert_form').each(function() {
                            this.reset();   //Here form fields will be cleared.
                        });
                        $('#success').hide(2500);
                    }
                }
            });
        });
<?php if (isset($edit_movie)) { ?>
            $('#update_movies').click(function() {
                $.ajax({
                    url: '<?php echo route("updatemovie",array($edit_movie->movie_id,$edit_movie->id)); ?>',
                    type: 'post',
                    data: $('#insert_form').serialize(),
                    cache: false,
                    dataType: 'json',
                    success: function(result) {
                        if (!result.success) {
                            $.each(result.errors, function(index, error) {
                                if (result.errors.title != null) {
                                    $('#title_error').html(result.errors.title);
                                    $('#title_div').addClass('has-error').focus();
                                }
                                if (result.errors.director != null) {
                                    $('#director_error').html(result.errors.director);
                                    $('#director_div').addClass('has-error').focus();
                                }
                            });
                        } else {
                            window.location.reload();
                        }
                    }
                });
            });
<?php } ?>
    });
</script>